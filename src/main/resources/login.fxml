<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>


<GridPane fx:controller="com.IRC.Controllers.Main" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25" />
    </padding>
    <children>
        <Label fx:id="errorMessage" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" />

        <Label text="Server: " GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="1" />
        <TextField fx:id="serverInput" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="1" />

        <Label text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="1" />
        <TextField fx:id="usernameInput" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="1" />

        <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="1" />
        <TextField fx:id="passwordInput" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="1" />

        <Label text="Nickname: " GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="1" />
        <TextField fx:id="nicknameInput" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="1" />

        <Button text="Login" onAction="#onLogin" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" />
    </children>
</GridPane>