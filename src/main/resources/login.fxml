<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<VBox fx:controller="com.IRC.Controllers.Login" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="errorMessage" />
        <HBox>
            <children>
                <Label text="Server: " />
                <TextField fx:id="serverInput" />
            </children>
        </HBox>
        <HBox>
            <children>
                <Label text="Username: " />
                <TextField fx:id="usernameInput" />
            </children>
        </HBox>
        <HBox>
            <children>
                <Label text="Password: " />
                <TextField fx:id="passwordInput" />
            </children>
        </HBox>
        <HBox>
            <children>
                <Label text="Nickname: " />
                <TextField fx:id="nicknameInput" />
            </children>
        </HBox>
        <Button text="Login" onAction="#onLogin" />
    </children>
</VBox>