    <children>
        <HBox>
            <children>
                <Button text="Quit" onAction="#onQuit" />
                <Button text="Preferences" onAction="#onPreferences" />
            </children>
        </HBox>
        <HBox>
            <children>
                <ListView fx:id="chatroomList" />
                <VBox>
                    <children>

                        <ListView fx:id="messagesList" />
                        <HBox>
                            <childen>
                                <TextField fx:id="messageText" />
                                <Label text="Send" />
                            </childen>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>